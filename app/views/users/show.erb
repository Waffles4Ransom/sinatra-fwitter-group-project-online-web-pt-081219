<% if current_user == @user %>
  <h2> My Tweets</h2>
<% else %>
  <h2><%= @user.username %>'s Tweets</h2>
<% end %>

<% @user.tweets.each do |t| %>
  <li><%= t.content %> posted on <%= t.created_at.strftime("%m/%d/%Y at %I:%M%p") %><br>
  <% if @user == current_user %>
    <a href='/tweets/<%= t.id %>/edit'><button>Edit Tweet</button></a>
    <form action='/tweets/<%= t.id %>/delete' method="POST">
      <input type='hidden' id='hidden' name='_method' value='delete'>
      <input type='submit' value='Delete Tweet'>
    </form>
  <% end %>
  </li>
<% end %>